@using Escuelas.UI.Helpers;
@model IEnumerable<Escuelas.NegocioEntidades.CategoriaValor>

@{
    ViewBag.Title = "Listado Opciones";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
                <br />
                <p>
                @Html.ActionLink("Agregar Nueva Opción", "EditarOpcion",new { opcionId = 0 })
                </p>
            </hgroup>
            <p>
               
            </p>
        </div>
    </section>
}
 <script type="text/javascript">
                $(function () {
                    $("#tblOpcion").tablesorter({ widthFixed: true, sortList: [[0, 0],[1,0]] })
                    .tablesorterPager({ container: $("#pagerOpcion"), size: $(".pagesize option:selected").val() });
                });
        </script>
<table id="tblOpcion" class="tablesorter">
    <thead>
    <tr>
         <th>
            @Html.DisplayNameFor(model => model.Categoria.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        
        <th></th>
    
    </tr>
        </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td style="text-align: center;width:45%">
            @Html.DisplayFor(modelItem => item.Categoria.Nombre)
        </td>
        <td style="text-align: center;width:45%">
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td style="text-align: center;width:10%">
             @Html.ActionImage("EditarOpcion", new { opcionId=item.ID },"~/Images/ico/editar22.png","Editar Opción")
            
            @Html.ActionImage("BorrarOpcion", new { opcionId = item.ID }, "~/Images/ico/eliminar24.ico", "Borrar Opción")
        </td>
    </tr>
}
        </tbody>
</table>
<div id="pagerOpcion" class="pager">
  <form>
    <img src="/Content/images/first.png" class="first"/>
    <img src="/Content/images/prev.png" class="prev"/>
    <span class="pagedisplay"></span> <!-- this can be any element, including an input -->
    <img src="/Content/images/next.png" class="next"/>
    <img src="/Content/images/last.png" class="last"/>
    <select class="pagesize">
      <option value="10">10</option>
      <option value="20">20</option>
      <option value="30">30</option>
      <option value="40">40</option>
    </select>
  </form>
</div>