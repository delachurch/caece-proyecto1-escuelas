<!DOCTYPE html>
<html lang="en">
<head>
    @using Escuelas.UI.Helpers;
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/jquery-ui.css" type="text/css">
    <link rel="stylesheet" href="~/Content/base.css" type="text/css">
    <link rel="stylesheet" href="~/Content/style.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Site.css" type="text/css">
    <link rel="stylesheet" href="~/Content/slimmenu.css" type="text/css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

     <script src="/Scripts/jquery-1.10.2.js"></script>

    <script src="/Scripts/jquery-migrate-1.2.1.js")" type="text/javascript"></script>
    
    <script src="/Scripts/jquery.tablesorter.js")" type="text/javascript"></script>
    <script src="/Scripts/jquery.tablesorter.pager.js")" type="text/javascript"></script>

    <script src="/Scripts/jquery-ui.js"></script>


    <script src="/Scripts/jquery.easing-1.3.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Scripts/jquery.slimmenu.min.js"></script>
   
    
   
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div>
                <img src="~/Images/Logo-Escuelas-Unsam-CAECE-276x286.png" width="120" /></>
            </div>
            <div>
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>
                <div>
                    @Html.Menu("navigation","menuEscuela",User.Identity.Name)
                </div>
            </div>
            <div id="spinner">
                Loading...
            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; SIRET @DateTime.Now.Year - Universidad Caece & Universidad de San Martin</p>
            </div>
        </div>
    </footer>

   
    @RenderSection("scripts", required: false)
    <script type="text/javascript">
        $(document).ready(function () {

            $('#navigation').slimmenu(
             {
                 resizeWidth: '860',
                 collapserTitle: 'Main Menu',
                 animSpeed: 'medium',
                 easingEffect: null,
                 indentChildren: false,
                 childrenIndenter: '&nbsp;'
             });


        });

        var spinnerVisible = false;
        function showProgress() {
            if (!spinnerVisible) {
                $("div#spinner").fadeIn("fast");
                spinnerVisible = true;
            }
        };

        function hideProgress() {
            if (spinnerVisible) {
                var spinner = $("div#spinner");
                spinner.stop();
                spinner.fadeOut("fast");
                spinnerVisible = false;
            }
        };

    </script>

    
</body>
</html>
