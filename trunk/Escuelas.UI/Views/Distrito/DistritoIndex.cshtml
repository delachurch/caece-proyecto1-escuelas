@using Escuelas.UI.Helpers;

@model IEnumerable<Escuelas.NegocioEntidades.Distrito>

@{
    ViewBag.Title = "Listado Distritos";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
                <br />
                <p>
                @Html.ActionLink("Agregar Nuevo Distrito", "EditarDistrito",new { distritoId = 0 })
                </p>
            </hgroup>
            <p>
               
            </p>
        </div>
    </section>
}
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Region)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="text-align: center;width:100px">
            @Html.DisplayFor(modelItem => item.Region)
        </td>
        <td style="text-align: center;width:600px">
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
              @Html.ActionImage("EditarDistrito", new { distritoId=item.ID },"~/Images/ico/editar22.png","Editar Relevamiento")
            @Html.ActionImage("BorrarDistrito", new { distritoId=item.ID }, "~/Images/ico/eliminar24.ico", "Borrar Maquina")
        </td>
    </tr>
}

</table>
